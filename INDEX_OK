        /* --- Reset e Fundo --- */
        body, html {
            margin: 0;
            padding: 0;
            width: 100vw;
            height: 100vh;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            overflow: hidden;
            background-color: #0043C8;
        }

        /* --- Container principal --- */
        #container {
            width: 100%;
            height: 100%;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            align-items: center; 
        }

        /* --- Cabeçalho da Caixa --- */
        header {
            width: 100%; 
            text-align: center;
            margin-bottom: 20px;
            flex-shrink: 0;
            color: #ffffff;
            padding-top: 20px; 
            box-sizing: border-box; 
            background-image: 
                radial-gradient(rgba(255, 255, 255, 0.05) 15%, transparent 16%),
                radial-gradient(rgba(255, 255, 255, 0.05) 15%, transparent 16%);
            background-size: 60px 60px;
            background-position: 0 0, 30px 30px;
        }

        header img {
            max-width: 100%;
        }

        header h1 {
            font-size: 2.8rem;
            font-weight: 700;
            margin: 5px 0 0 0;
            text-transform: uppercase;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        /* --- Animação Container --- */
        @keyframes slide-in-up {
            from { transform: translateY(100%); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        /* --- Caixa Central Transparente --- */
        #main-content {
            width: 90%;
            max-width: 1200px;
            flex-grow: 1; 
            background-color: rgba(255, 255, 255, 0.20); /* Branco 20% */
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.4);
            display: flex;
            flex-direction: column;
            overflow: hidden;
            animation: slide-in-up 0.6s ease-out forwards;
            margin-bottom: 20px; 
        }

        /* --- Scroller (Janela de rolagem) --- */
        #scroller-container {
            flex-grow: 1;
            overflow: hidden;
            position: relative;
        }

        #boloes-lista {
            display: block;
            width: 100%;
        }

        /* --- Animações --- */
        @keyframes scroll-up {
            from { transform: translateY(0); }
            to { transform: translateY(-50%); }
        }
        .scrolling { animation: scroll-up linear infinite; }

        @keyframes slide-in-left {
            from { transform: translateX(-100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        @keyframes slide-in-right {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        @keyframes flip-in {
            0% { opacity: 0; transform: translateY(-20px) rotateX(70deg); }
            100% { opacity: 1; transform: translateY(0) rotateX(0); }
        }

        /* --- Layout do Cartão --- */
        .cartao-bolao {
            display: flex;
